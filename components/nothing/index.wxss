/* components/nothing/index.wxss */

.nothing {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.bg {
  display: block;
  width: 150rpx;
  height: 150rpx;
}

.bg-tip {
  margin-top: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #ccc;
}