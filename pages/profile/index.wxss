.msg-capsule {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 228rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #999;
  margin: 30rpx auto 20rpx auto;
}

.msg-tip {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #fff;
}

.tabs {
  margin-top: 10rpx;
}

.tabs-line {
  width: 30% !important;
}

.tab-content {
  height: 100%;
}

.tabs-fixed {
  position: fixed;
  top: 0;
  margin-top: 0;
  margin-bottom: 80rpx;
  z-index: 99;
}

.nothing {
  margin-top: 335rpx;
}

.nothing-message {
  margin-top: 415rpx;
}