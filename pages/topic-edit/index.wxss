/* pages/topic-edit/index.wxss */

.title {
  line-height: 60rpx;
  color: #999;
  margin-left: 30rpx;
}

.input-textarea {
  width: 100% !important;
  height: 250rpx;
  background: #fff;
}

.inner-textarea {
  width: 700rpx !important;
}

.media {
  padding: 20rpx 30rpx;
  background: #fff;
}

.icon-pic {
  width: 100rpx;
  height: 100rpx;
}

.video-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 210rpx;
  height: 210rpx;
  border-radius: 4rpx;
  border: 1rpx solid #eee;
  background: #fff;
}

.tmp-video {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  border-radius: 4rpx;
}

.del-video {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .4);
  box-sizing: border-box;
}

.tag-items {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: nowrap;
  margin-bottom: 30rpx;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background: #fff;
}

.tag {
  margin: 10rpx 5rpx 0 5rpx;
}

.input-radio {
  display: flex;
  justify-content: center;
  height: 60rpx;
  padding-left: 30rpx;
  background: #fff;
}

.btn-send {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100% !important;
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  background: #337559;
  border-radius: 0 !important;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.btn-send-hover::before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border: inherit;
  border-radius: inherit;
  opacity: .15;
  transform: translate(-50%, -50%);
  content: '';
  background-color: #333;
  border-color: #333
}