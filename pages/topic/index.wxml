<!-- pages/topic/index.wxml -->

<!-- 标签栏 -->
<scroll-view scroll-x enable-flex class="tag-scroll" scroll-into-view="{{toTag}}">
	<view wx:for="{{labels}}" wx:key="item" id="{{'tag_' + item.id}}">
		<l-tag l-class="tag" plain="{{labelId == item.id ? false : true}}" shape="circle" bg-color="#337559" font-color="{{labelId == item.id ? '#fff' : '#337559'}}" bind:lintap="onTagTap" data-label="{{item.id}}">
			#{{item.name}}</l-tag>
	</view>
</scroll-view>

<!-- 下拉层按钮 -->
<view class="btn-popup" bindtap="togglePopup">
	<l-icon l-class="{{showPopup? 'btn-active' : 'btn'}}" name="close" size="15" color="#777" />
</view>

<!-- 下拉层 -->
<l-popup show="{{showPopup}}" animation content-align="top" bind:lintap="togglePopup" z-index="99">
	<view class="popup">
		<l-tag wx:for="{{labels}}" wx:key="item" l-class="tag" plain="{{labelId == item.id ? false : true}}" shape="circle" bg-color="#337559" font-color="{{labelId == item.id ? '#fff' : '#337559'}}" bind:lintap="onTagTap" data-label="{{item.id}}">#{{item.name}}</l-tag>
	</view>
</l-popup>

<!-- 动态内容 -->
<view class="topic-scroll">
	<l-card type="avatar" l-class="card" l-title-class="{{item.user.id != -1 ? 'card-title' : 'card-title-anon'}}" wx:for="{{topics}}" wx:key="item" wx:for-index="cardIndex" image="{{item.user.avatar + '?imageView2/1/w/60/h/60'}}" title="{{item.user.nick_name}}" describe="{{item.create_time}}" bind:linavatar="{{item.user.id != -1 ? 'gotoVisitingCard' : ''}}" bind:lintitle="{{item.user.id != -1 ? 'gotoVisitingCard' : ''}}" data-user-id="{{item.user.id}}">
		<view class="{{item.content.length >= 200 && !item.flod ? 'content-close' : 'avater-content'}}" data-id="{{item.id}}" data-index="{{cardIndex}}" bindtap="gotoDetail">{{item.content}}</view>
		<view wx:if="{{item.content.length >= 200}}" data-index="{{cardIndex}}" class="text-flod" bindtap="onFlodTap">
			{{item.flod ? '收起' : '全文'}}</view>

		<view class="posters" data-id="{{item.id}}" data-index="{{cardIndex}}" bindtap="gotoDetail">
			<video wx:if="{{item.video}}" src="{{item.video.src}}" poster="{{item.video.cover}}" direction="0" play-btn-position="center" catchtap="nothingTodo" class="video" style="{{item.video.height > item.video.width ? 'width: 380rpx;height: ' + 380 * item.video.height / item.video.width + 'rpx' : 'width: 450rpx;height: ' + 450 * item.video.height / item.video.width + 'rpx'}}" />
			<block wx:if="{{item.images.length == 1}}">
				<image class="column-one" wx:for="{{item.images}}" wx:key="item" src="{{item + '?imageView2/0/w/800/h/360'}}" mode="widthFix" catchtap="previewImage" data-src="{{item}}" data-index="{{cardIndex}}" lazy-load />
			</block>
			<block wx:elif="{{item.images.length == 2 || item.images.length == 4}}">
				<image class="column-two" wx:for="{{item.images}}" wx:key="item" src="{{item + '?imageView2/1/w/270/h/270'}}" mode="aspectFill" catchtap="previewImage" data-src="{{item}}" data-index="{{cardIndex}}" lazy-load />
			</block>
			<block wx:else>
				<image wx:for="{{item.images}}" wx:key="item" src="{{item + '?imageView2/1/w/180/h/180'}}" mode="aspectFill" catchtap="previewImage" data-src="{{item}}" data-index="{{cardIndex}}" lazy-load />
			</block>
		</view>

		<view class="avater-share-container">
			<view class="like-container" data-id="{{item.id}}" bindtap="onCommentTap">
				<l-icon name="comment" color="{{item.has_comment ? '#d81e05' : '#666'}}" size="28" />
				<view class="{{item.has_comment ? 'has-text' : ''}} number">{{item.comment_count}}</view>
			</view>
			<view class="like-container" data-index="{{cardIndex}}" bindtap="onStarTap">
				<l-icon name="like" color="{{item.has_star ? '#d81e05' : '#666'}}" size="28" />
				<view class="{{item.has_star ? 'has-text' : ''}} number">{{item.star_count}}</view>
			</view>
			<view class="like-container" data-id="{{item.id}}" data-index="{{cardIndex}}" bindtap="gotoDetail">
				<l-icon name="eye" color="#666" size="28" />
				<view class="number">{{item.click_count}}</view>
			</view>
		</view>
		<l-icon l-class="ellipsis" slot="more" name="ellipsis" color="#777" size="32" data-index="{{cardIndex}}" bindtap="onMoreTap" />
	</l-card>
	<l-loadmore wx:if="{{!isEnd}}" show="{{loading}}" line l-class="loading" />
	<l-loadmore show="{{isEnd && page != 1}}" line l-class="loading" type="end" />
</view>

<!-- 编辑按钮 -->
<view class="btn-edit" bindtap="onEditTap">
	<l-icon name="edit" color="#fff" size="30" />
</view>

<!-- nothing -->
<nothing wx:if="{{topics.length == 0}}" pic="../../images/icon_nothing/pic_topic.png" tip="暂时没有话题" />

<!-- 操作菜单 -->
<l-action-sheet show-cancel open-api="{{false}}" item-list="{{actionList}}" show="{{showAction}}" bind:linitemtap="onActionItemtap" bind:lincancel="onCancelSheetTap" />

<!-- 消息对话框 -->
<l-dialog />

<!-- 消息提示 -->
<l-message />